{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "vitest"],
    "paths": {
      "@/*": ["src/*"],
      "@bookmark/schemas": ["../../packages/schemas/src/index.js"],
      "@bookmark/code-definitions": ["../../packages/code-definitions/src/index.js"],
      "@bookmark/schemas/*": ["../../packages/schemas/src/*"],
      "@bookmark/code-definitions/*": ["../../packages/code-definitions/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/typings/*.d.ts", "tests/**/*.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
} 