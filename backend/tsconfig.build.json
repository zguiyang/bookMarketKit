{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "tests/**/*", 
    "**/*.test.ts", 
    "**/*.spec.ts", 
    "**/__tests__/**/*", 
    "src/mocks/**/*", 
    "vitest.config.ts"
  ]
}
