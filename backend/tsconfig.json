{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,

    "types": ["node", "vitest"],
    "lib": ["esnext"],
    "paths": {
      "@/*": ["./src/*"],
      "~shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.d.ts","tests/**/*.ts", "vitest.config.ts"],
  "ts-node": {
    "esm": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
