{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "flat": true,
    "spec": false
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "core/mailer/templates/**/*",
        "outDir": "dist/src"
      }
    ]
  }
}
