{
  "name": "@bookmark/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch ./src/app.ts | pino-pretty -t 'yyyy-mm-dd HH:MM:ss' --ignore 'pid,hostname'",
    "start:dev": "cross-env NODE_ENV=development node dist/app.js",
    "build": "rimraf dist && tsc --build tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:watch": "cross-env NODE_ENV=development NODE_OPTIONS=\"--import tsx\" vitest -w",
    "test": "cross-env NODE_ENV=development NODE_OPTIONS=\"--import tsx\" vitest run tests/mock.test.ts",
    "test:mock": "cross-env NODE_ENV=development NODE_OPTIONS=\"--import tsx\" vitest run tests/mock.test.ts"
  },
  "dependencies": {
    "@bookmark/auth": "workspace:^",
    "@bookmark/code-definitions": "workspace:^",
    "@bookmark/schemas": "workspace:^",
    "@fastify/autoload": "^6.3.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/redis": "^7.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.2.7",
    "cheerio": "^1.0.0",
    "cron": "^4.3.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "escape-string-regexp": "^5.0.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "fs-extra": "^11.3.0",
    "got": "^14.4.7",
    "ioredis": "^5.6.1",
    "lodash-es": "^4.17.21",
    "mime-types": "^3.0.1",
    "mongoose": "^8.14.0",
    "normalize-url": "^5.3.1",
    "open-graph-scraper": "^6.10.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/metascraper": "^5.41.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.15.3",
    "@types/normalize-url": "^4.2.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.2"
  }
}
