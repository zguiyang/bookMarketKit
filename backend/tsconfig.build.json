{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,

    "types": ["node", "vitest"],
    "lib": ["esnext"],
    "paths": {
      "@/*": ["./src/*"],
      "~shared/*": ["../shared/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["tests/**/*", "**/*.test.ts", "**/*.spec.ts", "**/__tests__/**/*", "src/mocks/**/*", "vitest.config.ts"]
}
